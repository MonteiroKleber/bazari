{
  "//": "V-3 (2025-09-18): Scripts dev/build/start revisados para execução direta",
  "name": "@bazari/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "dev:sandbox": "mkdir -p .tmp && TMPDIR=$PWD/.tmp tsx watch src/server.ts",
    "dev:nowatch": "tsx src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "NODE_ENV=production node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "if command -v eslint >/dev/null 2>&1; then eslint . --ext .ts,.tsx --max-warnings=0; else echo 'eslint não configurado na API, pulando lint'; fi",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:reset:force": "prisma migrate reset --force",
    "seed": "tsx prisma/seed.ts",
    "seed:categories": "tsx scripts/seedCategories.ts",
    "seed:specs": "tsx scripts/seedCategorySpecs.ts",
    "create-specs": "node scripts/createMissingCategorySpecs.js",
    "os:reindex": "tsx src/ops/os-reindex.ts",
    "ops:backfill-multi-stores": "tsx src/ops/backfill-multi-stores.ts",
    "workers": "tsx src/workers/index.ts",
    "migrate:stores": "tsx src/scripts/migrateStores.ts",
    "republish:stores": "tsx src/scripts/republishStores.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@bazari/siws-utils": "workspace:*",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^7.6.0",
    "@fastify/static": "^6.12.0",
    "@opensearch-project/opensearch": "^3.5.1",
    "@polkadot/api": "^16.4.7",
    "@polkadot/api-augment": "^16.4.8",
    "@polkadot/keyring": "^13.5.6",
    "@polkadot/types": "^16.4.7",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "ajv": "^8.12.0",
    "bullmq": "^5.61.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.8.1",
    "jsonwebtoken": "^9.0.2",
    "kubo-rpc-client": "^5.4.0",
    "mime": "^4.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime": "^3.0.4",
    "@types/node": "^20.10.6",
    "prisma": "^5.22.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
