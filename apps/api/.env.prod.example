PORT=3000
DATABASE_URL=postgresql://user:pass@db:5432/bazari_db
STORAGE_PROVIDER=fs

# Auth / SIWS
JWT_SECRET=REPLACE_WITH_LONG_RANDOM
AUTH_DOMAIN=app.example.com
AUTH_URI=https://app.example.com/auth/unlock
BAZARICHAIN_GENESIS_HASH=0xREPLACE

# Payments / Escrow
ESCROW_ACCOUNT=5REPLACEESCROWADDRESS
MARKETPLACE_FEE_BPS=250

# OpenSearch (optional)
USE_OPENSEARCH=false
OPENSEARCH_URL=http://opensearch:9200
OS_INDEX=bazari-items

# CORS (comma separated)
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Uploads
UPLOAD_MAX_SIZE_MB=10
UPLOAD_ALLOWED_MIME=image/jpeg,image/png,image/webp

