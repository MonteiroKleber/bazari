PORT=3000

# Postgres (SEU padrão)
DATABASE_URL=postgresql://bazari:bazari@localhost:5432/bazari_db

# Storage (sem IPFS)
STORAGE_PROVIDER=fs   # "fs" | "s3"

# S3 (preencher quando usar s3).
S3_REGION=us-east-1
S3_BUCKET=bazari-bucket
S3_ACCESS_KEY_ID=xxx
S3_SECRET_ACCESS_KEY=xxx
S3_PUBLIC_BASEURL=https://bazari-bucket.s3.amazonaws.com

USE_OPENSEARCH=true
OPENSEARCH_URL=http://localhost:9200   # se Desativou segurança no container (DEV)
OS_INDEX=bazari-items-v5

# Se seu OS estiver com segurança (https + auth), use:
# OPENSEARCH_URL=https://localhost:9200
# OS_USER=admin
# OS_PASS=<sua_senha>

# --- Auth/SIWS (adicionados para desenvolvimento) ---
# Segredo do JWT (30m) — use um valor longo/aleatório em produção
JWT_SECRET=dev-secret-should-be-very-long-1234567890abcdef
# Parâmetros fixos usados na mensagem SIWS e validados pela API
AUTH_DOMAIN=localhost
AUTH_URI=http://localhost:5173/login
BAZARICHAIN_GENESIS_HASH=0x1234567890abcdef
