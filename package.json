{
  "//": "V-2 (2025-09-18): Ajusta scripts de lint/typecheck para isolar API",
  "name": "@bazari/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Bazari - Nação Digital Descentralizada",
  "author": "Bazari Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "build": "pnpm --filter './apps/*' build",
    "clean": "pnpm --parallel --filter './apps/*' --filter './packages/*' clean",
    "lint": "pnpm --parallel --filter './apps/*' --filter './packages/*' lint",
    "test": "pnpm --parallel --filter './apps/*' --filter './packages/*' test",

    "dev:api": "pnpm --filter @bazari/api dev",
    "dev:api:nowatch": "pnpm --filter @bazari/api exec tsx src/server.ts",

    "typecheck": "pnpm --filter @bazari/api run typecheck || echo 'typecheck-api only'",
    "lint:api": "pnpm --filter @bazari/api run lint || echo 'lint-api only'",
    "test:api": "pnpm --filter @bazari/api run test || echo 'test-api only'",

    "os:reindex": "pnpm --filter @bazari/api exec tsx src/ops/os-reindex.ts"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5"
  }
}
